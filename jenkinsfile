
pipeline {
	agent any
	
	stages {
		stage('Build'){
			steps {
				echo 'Build ...'
				sh 'mvn install -Dmaven.test.skip=true'
				sh "ls ${env.WORKSPACE}/target/*.jar"
			}
		}
		stage('Test') {
			steps {
				echo 'Testing...'
			}
		}
		stage('Deploy') {
			steps {
				echo 'Deploying...'
				sh "cd ${env.WORKSPACE}/target/"
				sh 'pwd'
				sh "ls"
				sh "java -jar demo-0.0.1-SNAPSHOT.jar"
			}
		}
	
	}
}
