
pipeline {
	agent any
	
	stages {
		stage('Build'){
			steps {
				echo 'Build ...'
				sh 'mvn package docker:build'
			}
		}
		stage('Test') {
			steps {
				echo 'Testing...'
			}
		}
		stage('Deploy') {
			steps {
				echo 'Deploying...'
				sh " docker run -p 9999:9999 -t --name=demo springboot/demo"
			}
		}
	
	}
}
